<Window x:Class="SerialPortCommunicator.Modbus.Master.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MODBUS - Master" Height="499" Width="501" xmlns:my="clr-namespace:SerialPortCommunicator.Modbus.Master.View">
    <Grid Background="{StaticResource {x:Static SystemColors.ControlBrushKey}}">
        <GroupBox Header="Dodaj slave'a" Height="128" HorizontalAlignment="Left" Margin="12,12,0,0" Name="groupBox1" VerticalAlignment="Top" Width="263">
            <Grid>
                <Label Content="Adres:" Height="28" HorizontalAlignment="Left" Margin="6,6,0,0" Name="label1" VerticalAlignment="Top" />
                <TextBox Text="{Binding Path=NewSlaveAddress}" Height="23" HorizontalAlignment="Left" Margin="55,8,0,0" Name="textBox1" VerticalAlignment="Top" Width="42" />
                <Label Content="Parzystość i bity stopu:" Height="28" HorizontalAlignment="Left" Margin="6,40,0,0" Name="label2" VerticalAlignment="Top" />
                <RadioButton Content="E1" Height="16" HorizontalAlignment="Left" Margin="142,45,0,0" Name="radioButton1" VerticalAlignment="Top" />
                <RadioButton Content="O1" Height="16" HorizontalAlignment="Left" Margin="177,45,0,0" Name="radioButton2" VerticalAlignment="Top" />
                <RadioButton Content="N2" Height="16" HorizontalAlignment="Left" Margin="212,45,0,0" Name="radioButton3" VerticalAlignment="Top" />
                <Button Content="Dodaj" Command="{Binding Path=AddSlaveCommand}" Height="23" HorizontalAlignment="Left" Margin="6,74,0,0" Name="button1" VerticalAlignment="Top" Width="75" />
            </Grid>
        </GroupBox>
        <my:SlaveControlView DataContext="{Binding Path=Slave}" Margin="12,146,12,12" x:Name="slaveControlView1" />
    </Grid>
</Window>
